<% if logged_in? %>
<div class="container">
<p id="notice"><%= notice %></p>

  <h2>Listing Students</h2>
  <table class= "table_border table_inside_border" width = "1000px">
    <thead>
      <tr>
        <th class="heading_section" height="50px">Name</th>
        <th class="heading_section">Course</th>
        <th class="heading_section">School</th>
        <th class="heading_section">Email</th>
        <th colspan="3" class="heading_section"> Options </th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td align="center"><%= student.name %></td>
          <td align="center"><%= student.course %></td>
          <td align="center"><%= student.school %></td>
          <td align="center"><%= student.email %></td>

          <td align="center" width = "60px"><%= link_to 'Show', student %></td>
          <td align="center" width = "60px"><%= link_to 'Edit', edit_student_path(student) %></td>
          <td align="center" width = "60px"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
  <%= link_to 'New Student', new_student_path %>
</div>
<% end %>
